<div class="admin-link">
  <% if current_user %>
    <ul>
      <div class="flash-alert">
        <span><u><%= link_to "Edit Member", edit_member_path %> </u></span>
      </div>
      <div class="flash-error">
        <span><u><%= link_to "Delete Member", member_path(@member), :method => :delete %> </u></span>
      </div>
    </ul>
  <% end %>
</div>

<div class="member-info">
<h1>
  <%= @member.name %>
</h1>

<div class="portait">
  <%= image_tag @member.picture_url(:large).to_s %>
</div>

<% if (@member.position.length != 0) %>
  <p> - <%= @member.position %> - </p>
<% else %>
  <br/>
<% end %>

<h2>
  <strong>Major: </strong><%= @member.major %>
</h2>

<br />
<p> <%= @member.bio %> </p>
</div>

